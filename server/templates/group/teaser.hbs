<div class="group-teaser group-{{record.privacity}}">
  <div class="group-name">
    <h3>{{#link-to 'group.findOne' record.id}}{{record.name}}{{/link-to}}</h3>
  </div>
  <div class="group-description row">
    <div class="col-md-2">
    {{#link-to 'group.findOne' record.id}}
      {{we-image record.logo "thumbnail" class="img-thumbnail"}}
    {{/link-to}}

    </div>
    <div class="col-md-10">

    <p>{{we-strip-tags text=record.description maxLength=300}}</p>
    </div>
  </div>
  <div class="actions">
    {{t record.privacity}},
    {{record.meta.membersCount}} {{t 'group.members'}} ,
    {{#link-to 'group.findOne' record.id}}{{t 'View'}}{{/link-to}},
    {{{group-membership-btn groupId=record.id privacity=record.privacity membership=record.members locals=locals}}}
  </div>
</div>